    <!-- Logo Brand Block -->
    <div class="brand-logo wow bounceInUp animated">
        <div class="container">
            <div class="row">
                <div class="logo-brand">
                    <div class="new_title">
                        <h2>BRAND</h2>
                    </div>
                    <section>
                        <div class="container">
                            <div class="row">
                                <br>
                                {% for key,banner in banner_buttom %}
                                <div class="col-md-3 col-sm-3 pad0">
                                    <div class="link_hover">
                                        <img src="{{ banner.image }}" class="image">
                                        <div class="middle hoverbutton">
                                            <div class="box">
                                                <div class="text">
<!--                                                     {% if key == 2 %}
                                                    <span>Coming Soon</span>
                                                    {% else %}
                                                    <a href="{{ banner.href }}" class="btn">{{ banner.title != '' ? banner.title : '' }}</a>
                                                    {% endif %} -->
                                                    <a href="{{ banner.href }}" class="btn">{{ banner.title != '' ? banner.title : '' }}</a>
                                                </div>
                                                <div class="overlay"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {% endfor %}
                                <br>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>

</div>


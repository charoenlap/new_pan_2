{{ header }}

<div class="content common-home" >
    <div id="thm-mart-slideshow" class="thm-mart-slideshow">
        <div class="container">
            <div id='thm_slider_wrapper' class='thm_slider_wrapper fullwidthbanner-container'>
                <div id='thm-rev-slider' class='rev_slider fullwidthabanner'>
                    <ul>
                        
                        {% for banner in banners_home %}
                        <li data-transition='random' data-slotamount='7' data-masterspeed='1000' >
                        	<img src='{{ banner.image }}' data-bgposition='center top' data-bgfit='cover' data-bgrepeat='no-repeat' alt="slider-image2" />
                            <div class="info">
                                {% if banner.topic %}
                                <div class='tp-caption ExtraLargeTitle sft  tp-resizeme ' data-x='0' data-y='240' data-endspeed='500' data-speed='500' data-start='1100' data-easing='Linear.easeNone' data-splitin='none' data-splitout='none' data-elementdelay='0.1' data-endelementdelay='0.1'
                                    style='z-index:2;max-width:auto;max-height:auto;white-space:nowrap;'><span>{{ banner.topic }}</span></div>
                                {% endif %}
                                {% if banner.title %}
                                <div class='tp-caption LargeTitle sfl  tp-resizeme ' data-x='0' data-y='300' data-endspeed='500' data-speed='500' data-start='1300' data-easing='Linear.easeNone' data-splitin='none' data-splitout='none' data-elementdelay='0.1' data-endelementdelay='0.1'
                                    style='z-index:3;max-width:auto;max-height:auto;white-space:nowrap;'><span>{{ banner.title }}</span></div>
                                {% endif %}
                                {% if banner.link %}
                                <div class='tp-caption sfb  tp-resizeme ' data-x='0' data-y='550' data-endspeed='500' data-speed='500' data-start='1500' data-easing='Linear.easeNone' data-splitin='none' data-splitout='none' data-elementdelay='0.1' data-endelementdelay='0.1' style='z-index:4;max-width:auto;max-height:auto;white-space:nowrap;'><a href='{{ banner.link }}' class="buy-btn">Read More <i class="fas fa-caret-right" style="font-size:20px;margin-left:5px;vertical-align:bottom;"></i></a></div>
                                {% endif %}
                                {% if banner.introduction %}
                                <div class='tp-caption Title sft  tp-resizeme ' data-x='0' data-y='420' data-endspeed='500' data-speed='500' data-start='1500' data-easing='Power2.easeInOut' data-splitin='none' data-splitout='none' data-elementdelay='0.1' data-endelementdelay='0.1' style='z-index:4;max-width:auto;max-height:auto;white-space:nowrap;'>{{ banner.introduction }}</div>
                                {% endif %}
                            </div>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    {{ content_top }}

    <div id="content_result" class="container"></div>

    <!-- Welcome to PAN-GROUP ================================================== -->
    <section class="add-section">
        <div class="container">
            <div class="row">
            	{% for banner in bannerfix %}
                <div class="home-box">
                    <div class="box-img">
                        <a href="{{ banner.link }}"><img src="{{ banner.image }}" alt=""></a>
                        {# <div class="mask">
                            <div class="banner-info"><span class="small-text">SUPER DEALS</span>
                                <span>Hot Collection</span>
                            </div>
                        </div> #}
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>


    <!-- best Pro Slider -->
    <section class=" wow bounceInUp animated">
        <div class="best-pro slider-items-products container">
            <div class="new_title">
                <h2>Best Seller</h2>
            </div>
            <div class="cate-banner-img"><img src="catalog/view/theme/default/assets/images/category-banner.jpg" alt="Retis lapen casen"></div>
            <div id="best-seller" class="product-flexslider hidden-buttons">
                <div class="slider-items slider-width-col4 products-grid">
                    {% if product_bestseller %}
                    {% for product in product_bestseller %}
                    <div class="item">
                        <div class="item-inner">
                            <div class="item-img">
                                <div class="item-img-info">
                                    <a href="{{ product.href }}" title="Retis lapen casen" class="product-image"><img src="{{ product.image }}" alt="Retis lapen casen"></a>
                                    {% if product.new %}
                                    <div class="new-label new-top-left">New</div>
                                    {% endif %}
                                    {% if product.special and product.percent > 0 %}
                                    <div class="new-label new-top-left" style="left:auto;right:10px;">-{{ product.percent }}%</div>
                                    {% endif %}
                                    <div class="item-box-hover">
                                        <div class="box-inner">
                                            {# <div class="product-detail-bnt"><a href="{{ product.href }}" class="button detail-bnt"><i class="fas fa-search"></i><span> Quick View</span></a></div> #}
                                            <div class="product-detail-bnt"><a href="{{ product.href }}" class="button detail-bnt"><span> Quick View</span></a></div>
                                            <div class="actions">
                                                <span class="add-to-links">
                                                    {# <a class="link-wishlist" onclick="wishlist.add('{{ product.product_id }}');" title="Add to Wishlist"><i class="fas fa-heart"></i><span> Add to Wishlist</span></a> 
                                                    <a class="link-compare add_to_compare" onclick="compare.add('{{ product.product_id }}');" title="Add to Compare"><i class="fas fa-exchange-alt"></i><span> Add to Compare</span></a> #}
                                                    <a class="link-wishlist" onclick="wishlist.add('{{ product.product_id }}');" title="Add to Wishlist"><span> Add to Wishlist</span></a> 
                                                    <a class="link-compare add_to_compare" onclick="compare.add('{{ product.product_id }}');" title="Add to Compare"><span> Add to Compare</span></a>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="item-info">
                                <div class="info-inner">
                                    <div class="item-title"><a href="{{ product.href }}" title="Retis lapen casen">{{ product.name }}</a> </div>
                                    <div class="item-content">
                                        <div class="rating">
                                            <div class="ratings">
                                                <div class="rating-box">
                                                    <div class="rating" style="width:{{ product.rating }}%"></div>
                                                </div>
                                                <p class="rating-links"><a href="#">{{reviews}} Review(s)</a> <span class="separator">|</span> <a href="#">Add Review</a> </p>
                                            </div>
                                        </div>
                                        <div class="item-price">
                                            <div class="price-box">
                                                {% if product.special %}
                                                <span class="special-price">
                                                    <span class="price">{{ product.price }}</span> 
                                                    <span class="special">{{ product.special }}</span> 
                                                </span>
                                                {% else %}
                                                <span class="regular-price">
                                                    <span class="price">{{ product.price }}</span>         
                                                </span>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="add_cart">
                                            <button class="button btn-cart" onclick="cart.add('{{ product.product_id }}', '1');" type="button"><span><i class="fas fa-shopping-cart" style="margin:10px 5px;"></i> Add to Cart</span></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
        <br>
    </section>

    <!-- Home Lastest Blog Block -->

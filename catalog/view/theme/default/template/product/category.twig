{{ header }}

<!-- BREADCRUMBS -->
<div class="bcrumbs">
    <div class="container">
        <ul>
            {% for breadcrumb in breadcrumbs %}
            <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
            {% endfor %}
        </ul>
    </div>
</div>

<!-- SHOP CONTENT -->
<div class="shop-content">
    <div class="container">
        <div class="row">
            {{ column_left }}
            <div class="col-md-9 col-sm-8">
                <div class="filter-wrap">
                    <div class="row">
                        
                    </div>
                </div>
                <div class="pagenav-wrap">
                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            {{results}}
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <div class="pull-right">
                                <em>Page:</em>
                                {{ pagination }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="space50"></div>
                <div class="row">
                    {% for product in products %}
                    <div class="col-md-4 col-sm-6">
                        <div class="product-item">
                            <div class="item-thumb">
                                {# <span class="badge new">New</span> #}
                                <img src="{{product.thumb}}" class="img-responsive" alt="{{product.name}}"/>
                                <div class="overlay-rmore fa fa-search quickview" data-toggle="modal" data-target="#myModal" data-id="{{product.product_id}}"></div>
                                <div class="product-overlay">
                                    <button type="button" onclick="cart.add('{{ product.product_id }}', '{{ product.minimum }}');" class="addcart fa fa-shopping-cart"></button>
                                    
                                </div>
                            </div>
                            <div class="product-info">
                                <h4 class="product-title"><a href="{{ product.href }}">{{product.name}}</a></h4>
                                <span class="product-price">
                                {% if not product.special %} 
                                {{ product.price }} 
                                {% else %} 
                                <span class="price-new">{{ product.special }}</span>
                                <small class="price-old" style="text-decoration: line-through;">{{ product.price }}</small> {% endif %}
                                </span>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                <div class="pagenav-wrap">
                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            {{results}}
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <div class="pull-right">
                                <em>Page:</em>
                                {{ pagination }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="space50"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="related-posts">
                    <h5>Recently Viewed</h5>
                    {# <ul>
                        {% for page in pagination %}
                        <li><a href="./single-product.html"><img src="images/products/fashion/1.jpg" class="img-responsive" alt=""/></a></li>
                        {% endfor %}
                    </ul> #}
                </div>
            </div>
        </div>
    </div>
</div>

<div class="clearfix space20"></div>


{{ footer }}
{{ header }}


<!-- BREADCRUMBS -->
<div class="bcrumbs">
    <div class="container">
        <ul>
            {% for breadcrumb in breadcrumbs %}
            <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
            {% endfor %}
        </ul>
    </div>
</div>

<!-- MY ACCOUNT -->
<div class="account-wrap">
    <div class="container">
        <div class="row">
            {{ column_left }}
            {{ content_top }}
            <div class="col-md-9 col-sm-8">
              {% if error_warning %}
              <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
              {% endif %}
                <!-- HTML -->
                <div id="account-id">
                    <h4 class="account-title"><span class="fa fa-chevron-right"></span>Forgot password</h4>                                                                 
                    <div class="account-form">
                        <form id="shipping-zip-form" action="{{action}}" method="post">                                      
                            <ul class="form-list row">
                                <li class="col-md-12 col-sm-12">
                                    <label >{{entry_email}} <em>*</em></label>
                                    <input required type="text" class="input-text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email">
                                </li>                                 
                            </ul>
                            <div class="buttons-set">
                                <button class="btn-black" type="submit"><span><span>{{button_continue}}</span></span></button>
                            </div>
                        </form>
                    </div>                                 
                </div>
            </div>

            {{ column_right }}
            {{ content_bottom }}
        </div>
    </div>
</div>
<div class="clearfix space20"></div>

{{ footer }}
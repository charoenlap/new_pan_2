{{ header }}
<!-- BREADCRUMBS -->
<div class="bcrumbs">
    <div class="container">
        <ul>
          {% for breadcrumb in breadcrumbs %}
          <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
          {% endfor %}
        </ul>
    </div>
</div>


<!-- MY ACCOUNT -->
<div class="account-wrap">
    <div class="container">
        <div class="row">
            {{ column_left }}
            {{ content_top }}
            <div class="col-md-9 col-sm-8">
                <!-- HTML -->
                <div id="accordion">
                    <h4 class="accordion-toggle"><span>01</span>{{text_my_account}}</h4>
                    <div class="accordion-content default">                                    
                        <div class="details-box">
                            <ul>
                            
                                <li><a href="{{ edit }}"><i class="fa fa-edit"></i>  {{ text_edit }}</a></li>
                                <li><a href="{{ password }}"><i class="fa fa-edit"></i>  {{ text_password }}</a></li>
                                <li><a href="{{ address }}"><i class="fa fa-edit"></i>  {{ text_address }}</a></li>
                                <li><a href="{{ wishlist }}"><i class="fa fa-edit"></i>  {{ text_wishlist }}</a></li>
                            </ul>
                        </div>                                    
                    </div>
                    <div class="clearfix"></div>
                    <h4 class="accordion-toggle"><span>02</span>{{text_my_orders}}</h4>
                    <div class="accordion-content">                                    
                        <div class="details-box">
                            <ul>
                              <li><a href="{{ order }}"><i class="fa fa-edit"></i> {{ text_order }}</a></li>
                              <li><a href="{{ download }}"><i class="fa fa-edit"></i> {{ text_download }}</a></li>
                              {% if reward %}
                              <li><a href="{{ reward }}"><i class="fa fa-edit"></i> {{ text_reward }}</a></li>
                              {% endif %}
                              <li><a href="{{ return }}"><i class="fa fa-edit"></i> {{ text_return }}</a></li>
                              <li><a href="{{ transaction }}"><i class="fa fa-edit"></i> {{ text_transaction }}</a></li>
                              <li><a href="{{ recurring }}"><i class="fa fa-edit"></i> {{ text_recurring }}</a></li>
                            </ul>
                        </div>                                    
                    </div>
                    <h4 class="accordion-toggle"><span>03</span>{{text_my_affiliate}}</h4>
                    <div class="accordion-content">
                        <div class="details-box">
                            <ul>
                                <li>
                                  {% if not tracking %}
                                  <li><a href="{{ affiliate }}"><i class="fa fa-edit"></i> {{ text_affiliate_add }}</a></li>
                                  {% else %}
                                  <li><a href="{{ affiliate }}"><i class="fa fa-edit"></i> {{ text_affiliate_edit }}</a></li>
                                  <li><a href="{{ tracking }}"><i class="fa fa-edit"></i> {{ text_tracking }}</a></li>
                                  {% endif %}
                                </li>                                           
                            </ul>
                        </div>
                    </div>    
                    <h4 class="accordion-toggle"><span>04</span>{{text_my_newsletter}}</h4>
                    <div class="accordion-content">
                        <div class="details-box">
                            <ul>
                                <li>
                                  <li><a href="{{ newsletter }}"><i class="fa fa-edit"></i> {{ text_newsletter }}</a></li>
                                </li>                                           
                            </ul>
                        </div>
                    </div>      
                    {% if credit_cards %}
                    <h4 class="accordion-toggle"><span>05</span>{{text_credit_card}}</h4>
                    <div class="accordion-content">
                        <div class="details-box">
                            <ul>
                              {% for credit_card in credit_cards %}
                              <li><a href="{{ credit_card.href }}"><i class="fa fa-edit"></i> {{ credit_card.name }}</a></li>
                              {% endfor %}                            
                            </ul>
                        </div>
                    </div>   
                    {% endif %}                          
                </div>
            </div>

            {{ column_right }}
            {{ content_bottom }}
        </div>
    </div>
</div>
<div class="clearfix space20"></div>
{{ footer }}
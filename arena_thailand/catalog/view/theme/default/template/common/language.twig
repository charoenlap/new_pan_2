{% if languages|length > 1 %}
<li> 
    <span class="dropdown-title">Language :</span>
    <ul>
      {% for language in languages %}
      {% if language.code == code %} 
        <li><a class="active clickChangeLanguage" data-code="{{ language.code }}">{{ language.name }}</a></li>
      {% else %}
        <li><a class="clickChangeLanguage" data-code="{{ language.code }}">{{ language.name }}</a></li>
      {% endif %}
      {% endfor %}
    </ul>
    <input type="hidden" name="redirect" id="redirect_language" value="{{ redirect }}" />
</li>

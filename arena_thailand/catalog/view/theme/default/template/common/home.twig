                <div class="banner-detail">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-9 col-xs-8">
                                <div class="banner-detail-inner">
                                    <span class="slogan">{{ banner.topic }}</span>
                                    <h1 class="banner-title">{{ banner.title }}</h1>
                                    <span class="offer">{{ banner.introduction }}</span>
                                </div>
                                {% if banner.link %}
                                <a class="btn btn-color big" href="{{ banner.link }}">Read More!</a>
                                {% endif %}
                            </div>
                            <div class="col-sm-3 col-xs-4"></div>
                        </div>
                    </div>
                </div>
            </div>
            {% set i = i + 1 %}
            {% endfor %}
        </div>
    </div>
    <!-- BANNER END -->

    <!-- CONTAIN START -->

    <!-- SUB-BANNER START -->
    <section class="pt-95">
        <div class="container">
            <div class="sub-banner-block center-sm">
                <div class="row ">
                    {% for banner2 in banner2 %}
                    <div class="col-md-6 col-sm-12 ">
                        <div class="sub-banner sub-banner1">
                            <img alt="Eshoper" src="{{banner2.image}}">
                            <div class="sub-banner-detail">
                                <div class="row">
                                    <div class="col-lg-5"></div>
                                    <div class="col-lg-7">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                    <div class="col-md-6 col-sm-12 ">
                    {{ vdo }}

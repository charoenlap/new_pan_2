{% if currencies|length > 1 %}
  <li> 
    <span class="dropdown-title">Currency :</span>
    <ul>
      {% for currency in currencies %}
      {% if currency.code == code %}
      <li><a class="active clickChangeCurrency" data-code="{{ currency.code }}">{{ currency.symbol_left ? currency.symbol_left }}{{ currency.title }}{{ currency.symbol_right ? currency.symbol_right }}</a></li>
      {% else %}
      <li><a class="clickChangeCurrency" data-code="{{ currency.code }}">{{ currency.symbol_left ? currency.symbol_left }}{{ currency.title }}{{ currency.symbol_right ? currency.symbol_right }}</a></li>
      {% endif %}
      {% endfor %}
    </ul>
    <input type="hidden" name="redirect" id="redirect_currency" value="{{ redirect }}" />
  </li>
{% endif %} 
<script>
jQuery(document).ready(function($) {
  $('.clickChangeCurrency').click(function(event) {
    window.location.href = "{{ action }}&code=" + $(this).data('code') + "&redirect=" + encodeURIComponent($("#redirect_currency").val());
  });
});
</script>